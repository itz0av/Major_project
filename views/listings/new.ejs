
<%layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">
        <br><br><br>
    <h3>Create New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
    <div>
        <label for="title" class="form-lable">Title</label>
        <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required/>
        <div class="invalid-feedback">
            Title should be valid
          </div>
    </div>
    <div>
        <label for="description" class="form-lable">Description</label>
        <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">
            Description should be valid
          </div>
    </div>
    <div>
        <label for="image" class="form-lable">Upload Image</label>
        <input name="listing[image]" type="file" class="form-control" />
    </div>
    <!-- <div>
        <label for="image" class="form-lable">Image</label>
        <input name="listing[image.url]" placeholder="Enter image URL/link" class="form-control" />
    </div> -->
    <div class="row ">
        <div class="md-3 col-md-4">
            <div>
                <label for="price" class="form-lable">Price</label>
                <input name="listing[price]" placeholder="Enter price" class="form-control" required/>
                <div class="invalid-feedback">
                    Price should be valid
                  </div>
            </div>  
        </div>
        <div class="md-3 col-md-8">
            <label for="country" class="form-lable">Country</label>
            <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required/>
            <div class="invalid-feedback">
                Country should be valid
              </div>
        </div>
    </div>  
    <div>
        <label for="location" class="form-lable">Location</label>
        <input name="listing[location]" placeholder="Enter location" type="text"class="form-control" required/><br>
        <div class="invalid-feedback">
            Location should be valid
          </div>
    </div>
    
    <button type="submit" href="/listings" class="btn btn-danger add-btn">Add</button>
    </form>
    </div>
</div>